@namespace Savanna.Web.Components.Game

<div class="game-log-panel">
    <h3>Activity Log</h3>
    <div class="log-container">
        @{
            var logsCopy = GameLogs.ToList();
            logsCopy.Reverse();

            foreach (var log in logsCopy)
            {
                <div class="log-entry">@log</div>
            }
        }
    </div>
</div>

<style>
    .game-log-panel {
        background-color: white;
        border-radius: var(--border-radius);
        box-shadow: var(--card-shadow);
        overflow: hidden;
        flex: 1;
        display: flex;
        flex-direction: column;
        min-height: 0;
    }

    .game-log-panel h3 {
        margin: 0;
        padding: 1rem;
        background-color: #f8f0e3;
        border-bottom: 1px solid rgba(0, 0, 0, 0.1);
        font-size: 1.25rem;
    }

    .log-container {
        padding: 0.5rem;
        overflow-y: auto;
        background-color: #f8f0e3;
        flex: 1;
        min-height: 0;
    }

    .log-entry {
        padding: 0.5rem;
        border-bottom: 1px solid rgba(0, 0, 0, 0.05);
        font-size: 0.9rem;
    }

    .log-entry:last-child {
        border-bottom: none;
    }
</style>

@code {
    [Parameter]
    public IReadOnlyList<string> GameLogs { get; set; } = new List<string>();
}