@inherits LayoutComponentBase

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4">
            <div class="app-title d-none d-md-flex">
                <h1>Savanna World</h1>
            </div>
            <div class="ms-auto">
                <LoginDisplay />
            </div>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>

<style>
    .page {
        position: relative;
        display: flex;
        flex-direction: row;
        height: 100vh;
        overflow: hidden;
    }

    .sidebar {
        height: 100vh;
    }

    main {
        flex: 1;
        display: flex;
        flex-direction: column;
        height: 100vh;
        overflow: hidden;
    }

    .top-row {
        background-color: #f7f7f7;
        border-bottom: 1px solid #d6d5d5;
        justify-content: flex-end;
        height: 3.5rem;
        display: flex;
        align-items: center;
        position: sticky;
        top: 0;
        z-index: 1;
    }

    .content {
        flex: 1;
        overflow: auto;
        padding: 0 !important;
    }

    .app-title {
        display: flex;
        align-items: center;
        gap: 0.75rem;
    }

    .app-title h1 {
        margin: 0;
        font-size: 1.5rem;
        font-weight: 600;
        color: var(--savanna-earth);
    }

    .logo-img {
        width: 32px;
        height: 32px;
    }

    #blazor-error-ui {
        background: lightyellow;
        bottom: 0;
        box-shadow: 0 -1px 2px rgba(0, 0, 0, 0.2);
        display: none;
        left: 0;
        padding: 0.6rem 1.25rem 0.7rem 1.25rem;
        position: fixed;
        width: 100%;
        z-index: 1000;
    }

    #blazor-error-ui .dismiss {
        cursor: pointer;
        position: absolute;
        right: 0.75rem;
        top: 0.5rem;
    }
</style>
