@inherits LayoutComponentBase

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4">
            <div class="app-title d-none d-md-flex">
                <img src="favicon.png" alt="Savanna Logo" class="logo-img" />
                <h1>Savanna World</h1>
            </div>
            <div class="ms-auto">
                <LoginDisplay />
            </div>
        </div>

        <article class="content px-4">
            @Body
        </article>

        <footer class="footer mt-auto py-3">
            <div class="container text-center">
                <span class="text-muted">© @DateTime.Now.Year Savanna World Simulation</span>
            </div>
        </footer>
    </main>
</div>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>

<style>
    .app-title {
        display: flex;
        align-items: center;
        gap: 0.75rem;
    }

    .app-title h1 {
        margin: 0;
        font-size: 1.5rem;
        font-weight: 600;
        color: var(--savanna-earth);
    }

    .logo-img {
        width: 32px;
        height: 32px;
    }

    .footer {
        border-top: 1px solid rgba(0, 0, 0, 0.1);
        padding-top: 1rem;
        margin-top: 3rem;
        color: var(--secondary-text);
    }
</style>
