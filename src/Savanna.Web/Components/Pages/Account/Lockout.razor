@page "/Account/Lockout"
@using Savanna.Web.Constants
@rendermode InteractiveServer

@inject NavigationManager NavigationManager

<PageTitle>Account Locked</PageTitle>

<div class="savanna-container">
    <div class="lockout-content">
        <div class="lockout-icon">
            <i class="bi bi-lock-fill"></i>
        </div>
        <h1>Account Locked</h1>
        <p class="lead">Your account has been temporarily locked for security reasons.</p>
        <div class="lockout-actions">
            <p>This can happen if you:</p>
            <ul>
                <li>Made too many invalid login attempts</li>
                <li>Violated the terms of service</li>
                <li>Were locked by an administrator</li>
            </ul>
            <p>If you believe this is a mistake, please contact the site administrator.</p>
            <a href="/" class="btn-savanna btn-primary">
                <i class="bi bi-house-door me-1"></i> Return to Home
            </a>
        </div>
    </div>
</div>

<style>
    .savanna-container {
        margin: 3rem auto;
        max-width: 700px;
    }

    .lockout-content {
        text-align: center;
        padding: 1rem;
    }

    .lockout-icon {
        font-size: 4rem;
        color: var(--savanna-accent);
        margin-bottom: 1.5rem;
    }

    .lockout-content h1 {
        color: var(--savanna-earth);
        font-weight: 700;
        font-size: 2.2rem;
        margin-bottom: 1rem;
    }

    .lockout-content .lead {
        color: var(--secondary-text);
        margin-bottom: 2rem;
    }

    .lockout-actions {
        background-color: rgba(255, 255, 255, 0.5);
        border-radius: var(--border-radius);
        padding: 1.5rem;
        margin: 0 auto;
        max-width: 500px;
        text-align: left;
    }

    .lockout-actions ul {
        margin-bottom: 1.5rem;
    }

    .lockout-actions p {
        margin-bottom: 1rem;
    }

    .btn-savanna {
        margin-top: 1rem;
    }
</style>