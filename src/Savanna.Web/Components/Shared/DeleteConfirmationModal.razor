@namespace Savanna.Web.Components.Shared

<ModalPanel Title="Confirm Deletion" ErrorMessage="@ErrorMessage" OnClose="OnCancel">
    <div class="confirmation-message mb-4">
        <i class="bi bi-exclamation-triangle-fill text-danger me-2"></i>
        <div>
            <p>@Message</p>
            @if (!string.IsNullOrEmpty(ItemName))
            {
                <div class="item-name mt-2">
                    "<strong>@ItemName</strong>"
                </div>
            }
        </div>
    </div>
    <div class="modal-actions d-flex justify-content-end gap-2">
        <button type="button" class="btn btn-secondary" @onclick="OnCancel">Cancel</button>
        <button type="button" class="btn btn-danger" @onclick="OnConfirm">Delete</button>
    </div>
</ModalPanel>

<style>
    .confirmation-message {
        display: flex;
        align-items: flex-start;
    }

    .confirmation-message i {
        font-size: 1.25rem;
        margin-top: 2px;
    }

    .confirmation-message p {
        margin: 0;
    }

    .item-name {
        padding: 6px 10px;
        background-color: rgba(220, 53, 69, 0.1);
        border-radius: 4px;
        font-size: 0.95rem;
    }
</style>

@code {
    [Parameter]
    public string Message { get; set; } = "Are you sure you want to delete this item?";

    [Parameter]
    public string ItemName { get; set; } = string.Empty;

    [Parameter]
    public string ErrorMessage { get; set; } = string.Empty;

    [Parameter]
    public EventCallback OnCancel { get; set; }

    [Parameter]
    public EventCallback OnConfirm { get; set; }
}